#!/bin/sh

PID=`/bin/ps -ef | grep "java" | grep -v "grep" | awk '{print $2}'`
SERVICE_NAME=Minecraft-Server
PATH_TO_JAR=/var/minecraft/minecraft_server.jar

case $1 in
    start)
        echo "Starting $SERVICE_NAME ..."
        if [ -z "$PID" ]; then
            echo "pid does not exist, starting server..."
            cd /var/minecraft
            nohup java -Xmx768M -Xms256M -jar $PATH_TO_JAR nogui /tmp 2>> /dev/null &
            echo "$SERVICE_NAME started ..."
            exit 0
        else
            echo "$SERVICE_NAME is already running ..."
            exit 0
        fi
    ;;
    stop)
        if [ $PID > 0 ]; then
            echo "$SERVICE_NAME stoping ..."
            kill $PID;
            echo "$SERVICE_NAME stopped ..."
            exit 0
        else
            echo "$SERVICE_NAME is not running ..."
            exit 7
        fi
    ;;
    restart)
        if [ $PID > 0 ]; then
            echo "$SERVICE_NAME stopping ...";
            kill $PID;
            echo "$SERVICE_NAME stopped ...";
            echo "$SERVICE_NAME starting ..."
            cd /var/minecraft && nohup java -Xmx768M -Xms256M -jar $PATH_TO_JAR nogui /tmp 2>> /dev/null &
            echo "$SERVICE_NAME started ..."
            exit 0
        else
            echo "$SERVICE_NAME is not running ..."
            exit 7
        fi
    ;;
    status)
        if [ $PID > 0 ]; then
            echo "$SERVICE_NAME ( pid $PID ) is running..."
            exit 0
        else
            echo "$SERVICE_NAME is stopped"
            exit 7
        fi
    ;;
esac
